    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}